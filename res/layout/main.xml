<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mySwitch="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dip"
        android:orientation="vertical" >
		
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[IOS7开关风格]"
            android:layout_marginTop="5dp"/>
        
        <com.appscumen.example.MySwitch
            xmlns:mySwitch="http://schemas.android.com/apk/res-auto"
            android:id="@+id/switch1"
            style="@style/Switch_Style_Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            mySwitch:ios7Style="true"
            mySwitch:pushStyle="false" />

       <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[IOS经典开关风格]"
            android:layout_marginTop="80dp"/>
       
        <com.appscumen.example.MySwitch
            xmlns:mySwitch="http://schemas.android.com/apk/res-auto"
            style="@style/mySwitchStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp" />

        <com.appscumen.example.MySwitch
            xmlns:mySwitch="http://schemas.android.com/apk/res-auto"
            style="@style/mySwitchStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            mySwitch:pushStyle="false" />

        <com.appscumen.example.MySwitch
            xmlns:mySwitch="http://schemas.android.com/apk/res-auto"
            style="@style/mySwitchStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:checked="true"
            mySwitch:trackTextPadding="30dip" />
    </LinearLayout>

</ScrollView>